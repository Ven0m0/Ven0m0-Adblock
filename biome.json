{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "include": [
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "**/*.json"
    ],
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "Filters",
      "lists/releases",
      "lists/mirror",
      "*.min.js",
      "*.bundle.js",
      "bun.lockb"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "none",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },
  "linter": {
    "enabled":  true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noVar": "error",
        "noConsole": "off"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  },
  "overrides": [
    {
      "include": ["**/*.user.js", "userscripts/**/*.js"],
      "javascript": {
        "formatter": {
          "lineWidth": 120
        }
      },
      "linter": {
        "rules":  {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
