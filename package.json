{
  "name": "ven0m0-adblock",
  "version": "1.0.0",
  "description": "Comprehensive ad-blocking and web experience enhancement project with filter lists and userscripts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "./Scripts/build.sh",
    "build:all": "./Scripts/build.sh adblock hosts userscripts",
    "build:adblock": "./Scripts/build.sh adblock",
    "build:hosts": "./Scripts/build.sh hosts",
    "build:userscripts": "./Scripts/build.sh userscripts",
    "lint": "bun run lint:js && bun run lint:filters && bun run lint:md",
    "lint:js": "eslint .",
    "lint:filters": "bun x aglint",
    "lint:yaml": "command -v yamllint >/dev/null && yamllint . || { echo 'yamllint not installed. Install with: pip install yamllint' >&2; exit 1; }",
    "lint:md": "bun x markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:shell": "shellcheck Scripts/*.sh || true",
    "lint:eslint": "eslint .",
    "lint:aglint": "bun x aglint",
    "lint:fix": "eslint . --fix && bun x aglint --fix",
    "lint:fix:all": "bun run lint:fix && bun run format",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "test": "bun run lint && bun run format:check",
    "test:ci": "bun run lint && bun run format:check",
    "clean": "rm -rf node_modules dist lists/releases userscripts/dist Filters",
    "clean:cache": "rm -rf node_modules/.cache .eslintcache",
    "clean:all": "bun run clean && bun run clean:cache",
    "precommit": "bun run lint:fix:all",
    "validate": "bun run test && bun run build"
  },
  "devDependencies": {
    "@adguard/aglint": "latest",
    "@adguard/dead-domains-linter": "latest",
    "@adguard/hostlist-compiler": "latest",
    "@biomejs/biome": "latest",
    "oxfmt": "latest",
    "oxlint": "latest",
    "@eslint/js": "latest",
    "@microsoft/eslint-formatter-sarif": "latest",
    "@types/bun": "latest",
    "esbuild": "latest",
    "eslint": "latest",
    "globals": "latest",
    "markdownlint-cli2": "latest",
    "terser": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ven0m0/Ven0m0-Adblock.git"
  },
  "bugs": {
    "url": "https://github.com/Ven0m0/Ven0m0-Adblock/issues"
  },
  "homepage": "https://github.com/Ven0m0/Ven0m0-Adblock",
  "keywords": [
    "adblock",
    "adblocker",
    "ad-blocking",
    "filter-lists",
    "hostlist",
    "hosts-file",
    "privacy",
    "security",
    "userscripts",
    "web-enhancement"
  ],
  "author": "Ven0m0",
  "license": "GPL-3.0"
}
